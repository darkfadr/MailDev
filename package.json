{
  "name": "hermes",
  "description": "SMTP Server and Web Interface for reading and testing emails during development",
  "version": "2.0.0",
  "keywords": [
    "email",
    "e-mail",
    "mail",
    "maildev",
    "mailcatcher",
    "testing",
    "development",
    "smtp"
  ],
  "author": "Ashley Narcisse",
  "homepage": "http://darkfadr.github.io/hermes",
  "maintainers": [
    {
      "name": "Ashley Narcisse",
      "email": "ashlay49@gmail.com"
    }
  ],
  "repository": {
    "type": "git",
    "url": "http://github.com/darkfadr/hermes.git"
  },
  "scripts": {
    "test": "standard && istanbul cover _mocha",
    "lint": "standard",
    "dev": "node ./scripts/dev.js & npm run css-watch",
    "css": "node-sass --output-style compressed -o app/styles assets/styles/style.scss",
    "css-watch": "node-sass -wr --output-style compressed -o app/styles assets/styles/style.scss"
  },
  "main": "./index.js",
  "bin": {
    "maildev": "./bin/maildev"
  },
  "license": "MIT",
  "dependencies": {
    "async": "1.5.1",
    "commander": "2.9.0",
    "express": "^4.16.4",
    "mailparser": "0.6.2",
    "open": "0.0.5",
    "opn": "^5.4.0",
    "smtp-connection": "2.3.1",
    "smtp-server": "1.16.1",
    "socket.io": "^2.2.0",
    "wildstring": "1.0.8",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "expect": "1.20.2",
    "got": "^6.7.1",
    "http-proxy-middleware": "^0.19.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "node-sass": "^4.11.0",
    "nodemailer": "^4.7.0",
    "nodemon": "^1.18.7",
    "standard": "^12.0.1"
  },
  "engines": {
    "node": ">10.*.*"
  },
  "standard": {
    "ignore": [
      "app/components/"
    ]
  }
}
